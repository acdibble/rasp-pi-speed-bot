{
  "name": "rasp-pi-speed-bot",
  "version": "0.0.1",
  "description": "",
  "main": "src",
  "scripts": {
    "dev": "./node_modules/.bin/nodemon -r dotenv/config ./node_modules/.bin/babel-node src",
    "build": "./node_modules/.bin/babel src -d dist",
    "start": "npm run build && pm2 start pm2.json",
    "stop": "pm2 kill",
    "restart": "npm run build && pm2 restart HotSpotlight",
    "test": "cross-env NODE_ENV=test nyc --all --reporter=text mocha -r dotenv/config 'test/**/*.test.js' --exit",
    "posttest": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acdibble/rasp-pi-speed-bot.git"
  },
  "author": "Andrew Dibble, Jean Paul Angelle",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/acdibble/rasp-pi-speed-bot/issues"
  },
  "homepage": "https://github.com/acdibble/rasp-pi-speed-bot#readme",
  "dependencies": {
    "dotenv": "^6.0.0",
    "fast-speedtest-api": "^0.3.1",
    "mathjs": "^5.0.4",
    "mongoose": "^5.2.6",
    "node-cron": "^1.2.1",
    "twitter": "^1.7.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-preset-node8": "^1.2.0",
    "chai": "^4.1.2",
    "cross-env": "^5.2.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.13.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.3",
    "nyc": "^12.0.2"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
